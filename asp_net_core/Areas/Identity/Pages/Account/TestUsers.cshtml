@page
@model asp_net_core.Areas.Identity.Pages.Account.TestUsersModel
@{
    ViewData["Title"] = "Test Users";
}

<h2>Test Users Page</h2>

<div class="mb-3">
    <h3>Create Test User</h3>
    <form method="post" asp-page-handler="CreateTestUser">
        <button type="submit" class="btn btn-primary">Create Test User (testuser / Test123!)</button>
    </form>
</div>

<div>
    <h3>Users in Database</h3>
    @if (Model.Users.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Id</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.Id.ToString().Substring(0, 8)...</td>
                        <td>
                            <form method="post" asp-page-handler="ResetPassword" style="display: inline;">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-warning">Reset Password to Test123!</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No users found in database.</p>
    }
</div>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info mt-3">
        @Model.Message
    </div>
}