@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <label class="switch">
            <img class="sliderIMG" src="\moony.png" alt="moooooooooooon"/>
            <img class="sliderIMG" src="\sunny.png" alt="suuuuuuuuuuuun"/>
            <input type="checkbox">
            <span id="darkModeSlider"class="slider round"></span>
        </label>
    </li>
    @* <li class="nav-item"> *@
        <a  class="nav-link nav-message text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    @* </li> *@
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{

    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Auth">Login / Register</a>
    </li>
}
</ul>
